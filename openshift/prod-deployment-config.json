{
	"kind": "DeploymentConfig",
	"metadata": {
		"labels": {
			"app": "sprint-board"
		},
		"name": "sprint-board"
	},
	"spec": {
		"replicas": "1",
		"revisionHistoryLimit": "10",
		"selector": {
			"app": "sprint-board",
			"deploymentconfig": "sprint-board"
		},
		"template": {
			"metadata": {
				"labels": {
					"app": "sprint-board",
					"deploymentconfig": "sprint-board"
				}
			},
			"spec": {
				"containers": [
					{
						"env": [
							{
								"name": "SPRINT_API_SERVICE_URI",
								"value": "http://sprint-api.prod.svc:8080"
							},
							{
								"name": "STORY_API_SERVICE_URI",
								"value": "http://story-api.prod.svc:8080"
							},
							{
								"name": "TASK_API_SERVICE_URI",
								"value": "http://task-api.prod.svc:8080"
							},
							{
								"name": "JAEGER_SAMPLER_TYPE",
								"value": "const"
							},
							{
								"name": "JAEGER_SAMPLER_PARAM",
								"value": "1"
							},
							{
								"name": "JAEGER_SAMPLER_MANAGER_HOST_PORT",
								"value": "jaeger-agent.prod.svc:5778"
							},
							{
								"name": "JAEGER_AGENT_HOST",
								"value": "jaeger-agent.prod.svc"
							}
						],
						"name": "sprint-board",
						"imagePullPolicy": "Always",
						"ports": [
							{
								"containerPort": "8080",
								"protocol": "TCP"
							},
							{
								"containerPort": "8443",
								"protocol": "TCP"
							},
							{
								"containerPort": "8778",
								"protocol": "TCP"
							}
						],
						"readinessProbe": {
							"failureThreshold": "10",
							"initialDelaySeconds": "90",
							"periodSeconds": "30",
							"successThreshold": "1",
							"timeoutSeconds": "1",
							"httpGet": {
								"path": "/api",
								"port": 8080,
								"scheme": "HTTP"
							}
						},
						"resources": {
							"limits": {
								"cpu": "1000m",
								"memory": "200Mi"
							},
							"requests": {
								"cpu": "50m",
								"memory": "50Mi"
							}
						}
					}
				]
			}
		}
	}
}